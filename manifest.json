{
    "manifest_version": 2,
    "name": "Kagi-Filter",
    "version": "1.0",
    "description": "Describe your extension here.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["*://kagi.com/search*"],
            "js": ["content_script.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "https://raw.githubusercontent.com/*"
    ]
}
