{
    "manifest_version": 3,
    "name": "Kagi-Filter",
    "version": "1.0",
    "description": "Describe your extension here.",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["*://kagi.com/search*"],
            "js": ["content_script.js"],
            "background": {
                "service_worker": "background.js"
            },
            "all_frames": true,
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://raw.githubusercontent.com/*"
    ]
}
